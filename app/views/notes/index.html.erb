<h1>筆記列表</h1>

<%= link_to "新增筆記", new_note_path %>

<ul>
<% @notes.each do |note| %>
  <li>
	  <%= note.user.email %>
		<%= note.online_date %>
		<%= link_to note.title, note_path(note) %>
		<%= link_to "編輯", edit_note_path(note) %>
		<%= link_to "刪除", note_path(note),
		                    method: 'delete',
												data: { confirm: '確定嗎？', id: note.id }
											%>
		<%= link_to "發佈", publish_note_path(note),
		                    method: 'patch',
												data: { confirm: '確認發佈嗎？'} if note.may_publish? %>
	</li>
<% end %>
</ul>
